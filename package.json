{
  "name": "@cheq/monorepo",
  "version": "1.0.0",
  "keywords": [
    "ethereum",
    "react",
    "workspaces",
    "yarn"
  ],
  "private": true,
  "scripts": {
    "react-app:build": "yarn workspace @cheq/react-app build",
    "react-app:eject": "yarn workspace @cheq/react-app eject",
    "react-app:start": "yarn workspace @cheq/react-app dev",
    "react-app:test": "yarn workspace @cheq/react-app test",
    "dev": "yarn workspace @cheq/react-app dev",
    "build": "yarn workspace @cheq/react-app build",
    "prettier": "yarn workspace @cheq/react-app prettier",
    "start": "yarn workspace @cheq/react-app dev",
    "ipfs": "yarn workspace @cheq/react-app ipfs",
    "surge": "yarn workspace @cheq/react-app surge",
    "s3": "yarn workspace @cheq/react-app s3",
    "ship": "yarn workspace @cheq/react-app ship",
    "theme": "yarn workspace @cheq/react-app theme",
    "watch-theme": "yarn workspace @cheq/react-app watch",
    "chain": "yarn workspace @cheq/hardhat chain",
    "fork": "yarn workspace @cheq/hardhat fork",
    "node": "yarn workspace @cheq/hardhat chain",
    "test": "yarn workspace @cheq/hardhat test",
    "compile": "yarn workspace @cheq/hardhat compile",
    "deploy": "yarn workspace @cheq/hardhat deploy",
    "watch": "yarn workspace @cheq/hardhat watch",
    "accounts": "yarn workspace @cheq/hardhat accounts",
    "balance": "yarn workspace @cheq/hardhat balance",
    "send": "yarn workspace @cheq/hardhat send",
    "generate": "yarn workspace @cheq/hardhat generate",
    "account": "yarn workspace @cheq/hardhat account",
    "mineContractAddress": "cd packages/hardhat && npx hardhat mineContractAddress",
    "wallet": "cd packages/hardhat && npx hardhat wallet",
    "fundedwallet": "cd packages/hardhat && npx hardhat fundedwallet",
    "flatten": "cd packages/hardhat && npx hardhat flatten",
    "clean": "cd packages/hardhat && npx hardhat clean",
    "run-graph-node": "yarn workspace @cheq/services run-graph-node",
    "remove-graph-node": "yarn workspace @cheq/services remove-graph-node",
    "clean-graph-node": "yarn workspace @cheq/services clean-graph-node",
    "graph-prepare": "mustache packages/subgraph/config/config.json packages/subgraph/src/subgraph.template.yaml > packages/subgraph/subgraph.yaml",
    "graph-codegen": "yarn workspace @cheq/subgraph graph codegen",
    "graph-build": "yarn workspace @cheq/subgraph graph build",
    "graph-create-local": "yarn workspace @cheq/subgraph graph create --node http://localhost:8020/ Cheq/Cheq",
    "graph-remove-local": "yarn workspace @cheq/subgraph graph remove --node http://localhost:8020/ Cheq/Cheq",
    "graph-deploy-local": "yarn workspace @cheq/subgraph graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 Cheq/Cheq", 
    "graph-ship-local": "yarn graph-prepare && yarn graph-codegen && yarn graph-deploy-local",
    "deploy-and-graph": "yarn deploy && yarn graph-ship-local"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@graphprotocol/graph-ts",
      "**/@graphprotocol/graph-ts/**",
      "**/hardhat",
      "**/hardhat/**",
      "**/hardhat-ts",
      "**/hardhat-ts/**"
    ]
  }
}
